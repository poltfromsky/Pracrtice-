// Разделение строки на заглавные и строчные буквы на с ++
#include <iostream>
#include <string>
using namespace std;

int main() {
    string stroka = "AaBbCcDd";   // nasha stroka
    string bolshie = "";          // zaglavnye bukvy
    string malen = "";            // strochnye bukvy

    for (int i = 0; i < stroka.size(); i++) {
        if (i % 2 == 0)           // chetnyi indeks
            bolshie += stroka[i];
        else                      // nechetnyi indeks
            malen += stroka[i];
    }

    cout << "Заглавные: " << bolshie << endl;
    cout << "Строчные: " << malen << endl;
}

// • У нас строка "AaBbCcDd".
//  • У каждой буквы есть номер (индекс): 0='A', 1='a', 2='B', 3='b'....
//  • Если индекс чётный → берём заглавные (A, B, C, D).
//  • Если индекс нечётный → берём строчные (a, b, c, d).
//  • В итоге получаем:
//  • Заглавные → ABCD
//  • Строчные → abcd.
