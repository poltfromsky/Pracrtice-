// Задача 1: Создание и вывод элементов однонаправленного списка
// Реализовать простой однонаправленный список и добавить в него несколько элементов, затем вывести их.
#include <iostream>
using namespace std;

// Структура узла списка
struct Node {
    int data;      // данные
    Node* next;    // указатель на следующий узел
};

int main() {
    // Создаем три узла
    Node* head = new Node{1, nullptr};
    head->next = new Node{2, nullptr};
    head->next->next = new Node{3, nullptr};

    // Выводим список
    cout << "Элементы списка: ";
    Node* current = head;
    while (current != nullptr) {
        cout << current->data << " ";
        current = current->next;
    }

    // Освобождаем память
    while (head != nullptr) {
        Node* temp = head;
        head = head->next;
        delete temp;
    }
    return 0;
}
